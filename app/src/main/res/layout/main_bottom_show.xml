<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativie_show"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageview_main_bottom_show"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_bottom_show_selector" />

    <TextView
        android:id="@+id/textview_main_bottom_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageview_main_bottom_show"
        android:layout_centerHorizontal="true"
        android:text="@string/show"
        android:textColor="@drawable/main_bottom_text" />
</RelativeLayout>