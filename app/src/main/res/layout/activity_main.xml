<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.education.qqmovieproject.ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/fragme_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#303030"
        android:orientation="horizontal">

        <include layout="@layout/main_bottom_movie" />

        <include layout="@layout/main_bottom_show" />

        <include layout="@layout/main_bottom_discover" />

        <include layout="@layout/main_bottom_mine" />
    </LinearLayout>
</LinearLayout>
